{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "JwtSettings": {
    "Issuer": "IdentityAuth",
    "Audience": "IdentityAuthClients",
    "Secret": "<very-long-random-secret-put-in-keyvault-or-env>",
    "AccessTokenExpiresMinutes": 15,
    "RefreshTokenExpiresDays": 30
  }
}
